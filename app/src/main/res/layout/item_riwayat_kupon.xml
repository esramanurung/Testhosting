<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:id="@+id/txt_status">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Dipakai"
                android:textColor="@color/hijaubutton" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_status"
            android:id="@+id/txt_penukaran">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Tanggal penukaran" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":" />
            <TextView
                android:id="@+id/tgl_penukaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Januari 2020" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/txt_pemakaian"
            android:layout_below="@id/txt_penukaran">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Pemakaian" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":" />
            <TextView
                android:id="@+id/tgl_pemakaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Januari 2020"></TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/txt_poin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_pemakaian">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Poin yang Digunakan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":" />

            <TextView
                android:id="@+id/poin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="275dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/txt_id_kupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_poin">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Kupon ID" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":" />
            <TextView
                android:id="@+id/idkupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jns_kupon"
            android:layout_below="@+id/txt_id_kupon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Jenis Kupon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":" />
            <TextView
                android:id="@+id/jns_kupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="300dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/img_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_jns_kupon"
            android:gravity="end"
            android:layout_marginRight="30dp">
            <Button
                android:id="@+id/hapus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_delete_forever_black_24dp"
                android:gravity="end"
                android:layout_below="@id/jns_kupon"
                />

        </LinearLayout>
        <View
            android:layout_below="@+id/img_button"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorlatar">
        </View>
    </RelativeLayout>
</LinearLayout>