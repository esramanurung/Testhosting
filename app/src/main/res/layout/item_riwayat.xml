<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.RiwayatFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colortext"
        android:layout_marginLeft="3dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ditolak"
            android:textColor="@color/merahbutton"
            android:layout_gravity="right"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/tgl_pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal"
            android:layout_marginLeft="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/jenis_nonorganik"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/non_organik" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/list_nonorganik"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/jumlah_organik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/jenis_elektronik"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/elektronik"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=":"/>

            <TextView
                android:id="@+id/list_elektronik"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/jumlah_elektronik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pcs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/jenis_pakaian"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/pakaian"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=":"/>

            <TextView
                android:id="@+id/list_pakaian"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="- "
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/jumlah_pakaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pcs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/txt_metode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/metode" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=":" />
            <TextView
                android:id="@+id/metode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/txt_lokasi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lokasi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=":" />
            <TextView
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/poin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/poin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/total_poin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/hapus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_delete_forever_black_24dp"
            android:layout_gravity="right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorlatar">
        </View>
    </LinearLayout>
</RelativeLayout>